<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.arthur.w5alarm.activity.AlarmTotalSettingActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/menu_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/indicator"></android.support.v4.view.ViewPager>

    <menu.arthur.w5menu.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="2dp"
        app:radius="2dp"
        app:fillColor="@color/alarmblue"
        app:pageColor="#BABABA"
        app:strokeColor="#FF000000"
        app:strokeWidth="0dp"
        android:layout_gravity="top"/>


</FrameLayout>
